@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<quote_calculation_Application.Insuree>


@{
    ViewBag.Title = "Admin Panel";
}

<h2 class="text-center">Admin Panel - Quotes List</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Car Make</th>
            <th>Car Model</th>
            <th>Quote</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var insuree in Model)
        {
            <tr>
                <td>@insuree.FirstName @insuree.LastName</td>
                <td>@insuree.Email</td>
                <td>@insuree.CarMake</td>
                <td>@insuree.CarModel</td>
                <td>$@insuree.QuoteAmount</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = insuree.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = insuree.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
